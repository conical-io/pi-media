div(class="pm-schedule-container")
	div(class="pm-schedule-time-display")
		div(class="pm-day-hours-time-display" ng-repeat="(hourKey, hourVal) in ScheduleCtrl.hours") 
			div(class="time-label") {{hourVal.label}}
	


	div(class="pm-schedule-days-display")
		
		div(class="pm-days-display" ng-class="{fixed: ScheduleCtrl.fixDayTitles}")
			div(class="pm-days-display-container")
				div(class="pm-day-title" ng-repeat="(dayKey, dayVal) in ScheduleCtrl.days") {{dayVal.name}}
		
		div(class="pm-schedule-day" ng-repeat="(dayKey, dayVal) in ScheduleCtrl.days" ng-class="{weekend: dayVal.weekend}")
			div(class="pm-day-title-spacer") 
			div(class="pm-hour" ng-dblclick="ScheduleCtrl.addEvent({day: dayVal, hour: hourVal})" ng-repeat="(hourKey, hourVal) in ScheduleCtrl.hours") 
			div(class="pm-event-holder")
				div(class="pm-profile-listing" ng-repeat="(profileKey, profileVal) in ScheduleCtrl.scheduleDisplay[dayVal.key]" ng-class="{continued: profileVal.continued}" style="height:{{profileVal.height}}px; top:{{profileVal.top}}px")
					div(class="profile-inner-display")
						div(class="profile-inner-display-color" style="background-color: {{profileVal.profileDetails.color}}")
						div(class="profile-inner-display-text")
							
							div(class="profile-detail tag profile link" ng-click="ScheduleCtrl.editEvent()" ng-hide="profileVal.continued") 
								i(class="fa fa-dot-circle-o")
								span {{profileVal.profileDetails.name}} {{profileVal.desc}}

							div(class="profile-detail tag profile" ng-show="profileVal.continued") 
								i(class="fa fa-dot-circle-o")
								span {{profileVal.profileDetails.name}} {{profileVal.desc}}

							span(ng-hide="profileVal.continued")
								div(class="profile-detail tag spotify") 
									i(class="fa fa-spotify")
									span {{profileVal.profileDetails.spotify}}
								div(class="profile-detail tag dropbox") 
									i(class="fa fa-dropbox")
									span {{profileVal.profileDetails.dropboxLabel}}